<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingTop="50dp">
    <!--顶部头像等资料信息-->
        <LinearLayout
            android:id="@+id/ll1"
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/iv_bottom"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icon_avatar" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/left_view_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="jiangqqlmj"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
                <TextView
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="10dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:id="@+id/left_view_description"
                    android:text="菜鸟窝高级会员"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <!--中间信息列表-->
        <ListView
            android:id="@+id/left_view_lv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@drawable/lv_item_selector"
            android:divider="@drawable/bottom_line_gray"
            android:dividerHeight="1dp"
            android:layout_marginTop="100dp"/>
</RelativeLayout>