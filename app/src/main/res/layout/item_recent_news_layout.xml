<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/recent_item_img_logo"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/item_recent_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="65dp"/>
    <TextView
        android:id="@+id/recent_item_tv_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/color_tab_title"
        android:text="创投探索之旅·上海站——股权投资:中产阶层最好的上升通道"
        android:maxLines="2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <!--地点-->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:src="@drawable/metting_list_icon_address"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/recent_item_tv_location"
            android:textColor="@color/color_head_title"
            android:text="上海上海市卢湾区大埔路15号·格林豪泰酒店"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--报名状态和时间-->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/recent_item_tv_status"
            android:textColor="@color/color_white"
            android:background="@drawable/icon_activity_jin"
            android:text="报名中"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_height="23dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/recent_item_tv_timetext"
            android:textColor="@color/color_head_title"
            android:text="12月20日 14:00-17:00"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>